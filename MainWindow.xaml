<Window x:Class="Baiguzin41size.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Baiguzin41size"
        mc:Ignorable="d"
        Title="Baiguzin41" MinHeight="600" MinWidth="1300" Height="600" Width="1300" FontFamily="Comic Sans MS"
        Icon="Res/icon.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>
        
        <Frame Grid.Row="1" Name="MainFrame" NavigationUIVisibility="Hidden" ContentRendered="MainFrame_ContentRendered"></Frame>
        
        <TextBlock Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Text="Магазин 41 размер" FontSize="40"></TextBlock>
        <Image Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left">
            <Image.Source>
                REs/logo.png    
            </Image.Source>
        </Image>
        <Button Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Center" Content="Назад" Click="Button_Click" Name="Button"></Button>
    </Grid>
</Window>
